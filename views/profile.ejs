<%- include("partials/head", {title: "My Profile"}); %>

<div>
  <h1>My Profile</h1>
  <h2><a href="/users/<%= user.id %>">Back</a></h2>
  <table border="1" style="width:25%">
    <tr>
      <th>First Name:</th>
      <td><%= user.first_name %></td>
    </tr>
    <tr>
      <th>Last Name:</th>
      <td><%= user.last_name %></td>
    </tr>
    <tr>
      <th>Email:</th>
      <td><%= user.email %></td>
    </tr>
    <tr>
      <th>Gender:</th>
      <td><%= user.gender %></td>
    </tr>
    <tr>
      <th>Address:</th>
      <td><%= user.address %></td>
    </tr>
  </table>
  <h3><a href="/users/<%= user.id %>/profile/edit">Edit</a> | <a href="/users/<%= user.id %>/profile/delete" onclick="return window.confirm('Are you sure want to delete this account permanently?');">Delete Account</a></h3>
</div>

<%- include("partials/foot"); %>